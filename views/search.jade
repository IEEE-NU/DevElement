extends layout

block content
  .pageheader
    h3 GroupSearch

  form.form-horizontal(role='form', method='POST')
    .form-group
        input.form-control(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-sm-2 control-label', for='class') What class do you need a group for?
      .col-sm-8
        input.form-control(type='text', name='class', id='class', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='location') What location suits you best?
      .col-sm-8
        input.form-control(type='text', name='location', id='location')
    .form-group
        input.form-control(type='hidden', name='_csrf', value=token) 
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          | Submit
